<Window x:Class="CustomSearchSpotlight.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ðŸ” Spotlight" 
        Height="600" Width="500"
        WindowStyle="None" 
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Loaded="Window_Loaded"
        RenderTransformOrigin="0.5,0.5">
    
    <!-- Window Transform for Animations -->
    <Window.RenderTransform>
        <TransformGroup>
            <ScaleTransform/>
            <TranslateTransform/>
        </TransformGroup>
    </Window.RenderTransform>
    
    <!-- MAIN GLASS CONTAINER -->
    <Border CornerRadius="30" Margin="15" 
            Style="{StaticResource GlassContainer}">
        
        <!-- Background Glass Effect -->
        <Border.Effect>
            <BlurEffect Radius="30" KernelType="Gaussian"/>
        </Border.Effect>
        
        <!-- Main Content -->
        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- ========== SEARCH SECTION ========== -->
            <StackPanel Grid.Row="0">
                <!-- Animated Search Bar -->
                <Border x:Name="SearchContainer" 
                        Style="{StaticResource AnimatedSearchBox}"
                        Height="50" 
                        Margin="0,0,0,15">
                    <Grid>
                        <!-- Search Icon -->
                        <TextBlock Text="ðŸ”" 
                                   FontSize="18"
                                   VerticalAlignment="Center"
                                   Margin="15,0"
                                   Foreground="#80FFFFFF"/>
                        
                        <!-- Search Input -->
                        <TextBox x:Name="SearchBox" 
                                 Text="" 
                                 BorderThickness="0" 
                                 Background="Transparent"
                                 Foreground="White"
                                 FontSize="16"
                                 Padding="40,0,40,0"
                                 VerticalContentAlignment="Center"
                                 TextChanged="SearchBox_TextChanged"
                                 KeyDown="SearchBox_KeyDown">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <ScrollViewer x:Name="PART_ContentHost"/>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                        
                        <!-- Voice Button -->
                        <Button x:Name="VoiceButton" 
                                Content="ðŸŽ¤" 
                                Style="{StaticResource AppleGlassButton}"
                                Width="30" Height="30"
                                HorizontalAlignment="Right"
                                Margin="0,0,10,0"
                                Click="VoiceButton_Click"
                                ToolTip="Voice Search"/>
                    </Grid>
                </Border>
                
                <!-- Searching Animation Bar -->
                <Border x:Name="SearchingAnimationBar" 
                        Height="3" 
                        CornerRadius="1.5"
                        Margin="10,0,10,0"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Stretch"
                        Visibility="Collapsed">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="Transparent" Offset="0"/>
                            <GradientStop x:Name="AnimGradient1" Color="#007AFF" Offset="0"/>
                            <GradientStop x:Name="AnimGradient2" Color="#0A84FF" Offset="0"/>
                            <GradientStop Color="Transparent" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
            </StackPanel>
            
            <!-- ========== RESULTS SECTION ========== -->
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Margin="0,10,0,0">
                <StackPanel>
                    <!-- Voice Animation (when speaking) -->
                    <Border x:Name="VoiceAnimationContainer" 
                            Height="40"
                            Margin="0,0,0,10"
                            Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                            <!-- Voice Waves -->
                            <Rectangle x:Name="VoiceWave1" 
                                       Width="4" Height="4"
                                       Fill="#007AFF" 
                                       Margin="2,0"
                                       RadiusX="2" RadiusY="2"/>
                            <Rectangle x:Name="VoiceWave2" 
                                       Width="4" Height="4"
                                       Fill="#0A84FF" 
                                       Margin="2,0"
                                       RadiusX="2" RadiusY="2"/>
                            <Rectangle x:Name="VoiceWave3" 
                                       Width="4" Height="4"
                                       Fill="#007AFF" 
                                       Margin="2,0"
                                       RadiusX="2" RadiusY="2"/>
                            
                            <TextBlock Text="Asystent mÃ³wi..." 
                                       Foreground="#80FFFFFF"
                                       Margin="10,0,0,0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- File Results -->
                    <Border x:Name="FileResultsPanel" 
                            CornerRadius="20" 
                            Background="#20000000" 
                            BorderThickness="1" 
                            BorderBrush="#30FFFFFF"
                            Padding="15"
                            Margin="0,0,0,10"
                            Visibility="Collapsed">
                        <!-- Content -->
                    </Border>
                    
                    <!-- Web Results -->
                    <Border x:Name="WebResultsPanel" 
                            CornerRadius="20" 
                            Background="#20000000" 
                            BorderThickness="1" 
                            BorderBrush="#30FFFFFF"
                            Padding="15"
                            Margin="0,0,0,10"
                            Visibility="Collapsed">
                        <!-- Content -->
                    </Border>
                    
                    <!-- AI Results -->
                    <Border x:Name="AIResultsPanel" 
                            CornerRadius="20" 
                            Background="#20000000" 
                            BorderThickness="1" 
                            BorderBrush="#30FFFFFF"
                            Padding="15"
                            Visibility="Collapsed">
                        <!-- Content -->
                    </Border>
                </StackPanel>
            </ScrollViewer>
            
            <!-- ========== STATUS BAR ========== -->
            <Border Grid.Row="2" 
                    CornerRadius="10" 
                    Background="#10000000" 
                    Padding="10"
                    Margin="0,15,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Status Text -->
                    <TextBlock x:Name="StatusText" 
                               Text="âœ¨ NaciÅ›nij Alt+Space lub mÃ³w..."
                               Foreground="#80FFFFFF"
                               FontSize="12"
                               VerticalAlignment="Center"/>
                    
                    <!-- Settings Button -->
                    <Button Grid.Column="1" 
                            Content="âš™ï¸" 
                            Style="{StaticResource AppleGlassButton}"
                            Width="30" Height="30"
                            Click="SettingsButton_Click"
                            ToolTip="Ustawienia"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
<GlassWindow x:Class="CustomSearchApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomSearchApp"
        mc:Ignorable="d"
        Title="CustomSearchSpotlight" 
        Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        Topmost="True"
        ShowInTaskbar="False">
    
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#20FFFFFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#60FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
        
        <Style TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Border Background="#80151515" CornerRadius="10" Margin="20">
            <Border.Effect>
                <BlurEffect Radius="10"/>
            </Border.Effect>
        </Border>
        
        <StackPanel Margin="30" VerticalAlignment="Top">
            <!-- Pole wyszukiwania -->
            <TextBox x:Name="SearchTextBox" 
                     Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                     Height="50"
                     VerticalContentAlignment="Center">
                <TextBox.Style>
                    <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TextBox">
                                    <Grid>
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="8"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"/>
                                        <ScrollViewer x:Name="PART_ContentHost" 
                                                      Margin="{TemplateBinding Padding}"
                                                      VerticalAlignment="Center"/>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TextBox.Style>
            </TextBox>
            
            <!-- Lista wynikÃ³w -->
            <ListBox ItemsSource="{Binding SearchResults}"
                     Margin="0,20,0,0"
                     Background="Transparent"
                     BorderThickness="0"
                     MaxHeight="400"
                     ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" 
                                       Text="{Binding Icon}"
                                       FontSize="20"
                                       Margin="0,0,10,0"
                                       VerticalAlignment="Center"/>
                            
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="{Binding Title}"
                                           FontSize="14"
                                           FontWeight="Bold"
                                           Foreground="White"/>
                                <TextBlock Text="{Binding Path}"
                                           FontSize="11"
                                           Foreground="#CCCCCC"
                                           TextTrimming="CharacterEllipsis"/>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            
            <!-- Indykator Å‚adowania -->
            <ProgressBar Height="3" 
                         Margin="0,10,0,0"
                         IsIndeterminate="{Binding IsSearching}"
                         Background="Transparent"
                         Foreground="#4F8CEB"
                         Visibility="{Binding IsSearching, Converter={StaticResource BooleanToVisibilityConverter}}"/>
        </StackPanel>
    </Grid>
</GlassWindow>
