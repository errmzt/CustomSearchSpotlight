<Window x:Class="CustomSearchSpotlight.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ðŸ” Spotlight" 
        Height="600" Width="500"
        WindowStyle="None" 
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Loaded="Window_Loaded"
        RenderTransformOrigin="0.5,0.5">
    
    <!-- Window Transform for Animations -->
    <Window.RenderTransform>
        <TransformGroup>
            <ScaleTransform/>
            <TranslateTransform/>
        </TransformGroup>
    </Window.RenderTransform>
    
    <!-- MAIN GLASS CONTAINER -->
    <Border CornerRadius="30" Margin="15" 
            Style="{StaticResource GlassContainer}">
        
        <!-- Background Glass Effect -->
        <Border.Effect>
            <BlurEffect Radius="30" KernelType="Gaussian"/>
        </Border.Effect>
        
        <!-- Main Content -->
        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- ========== SEARCH SECTION ========== -->
            <StackPanel Grid.Row="0">
                <!-- Animated Search Bar -->
                <Border x:Name="SearchContainer" 
                        Style="{StaticResource AnimatedSearchBox}"
                        Height="50" 
                        Margin="0,0,0,15">
                    <Grid>
                        <!-- Search Icon -->
                        <TextBlock Text="ðŸ”" 
                                   FontSize="18"
                                   VerticalAlignment="Center"
                                   Margin="15,0"
                                   Foreground="#80FFFFFF"/>
                        
                        <!-- Search Input -->
                        <TextBox x:Name="SearchBox" 
                                 Text="" 
                                 BorderThickness="0" 
                                 Background="Transparent"
                                 Foreground="White"
                                 FontSize="16"
                                 Padding="40,0,40,0"
                                 VerticalContentAlignment="Center"
                                 TextChanged="SearchBox_TextChanged"
                                 KeyDown="SearchBox_KeyDown">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <ScrollViewer x:Name="PART_ContentHost"/>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                        
                        <!-- Voice Button -->
                        <Button x:Name="VoiceButton" 
                                Content="ðŸŽ¤" 
                                Style="{StaticResource AppleGlassButton}"
                                Width="30" Height="30"
                                HorizontalAlignment="Right"
                                Margin="0,0,10,0"
                                Click="VoiceButton_Click"
                                ToolTip="Voice Search"/>
                    </Grid>
                </Border>
                
                <!-- Searching Animation Bar -->
                <Border x:Name="SearchingAnimationBar" 
                        Height="3" 
                        CornerRadius="1.5"
                        Margin="10,0,10,0"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Stretch"
                        Visibility="Collapsed">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="Transparent" Offset="0"/>
                            <GradientStop x:Name="AnimGradient1" Color="#007AFF" Offset="0"/>
                            <GradientStop x:Name="AnimGradient2" Color="#0A84FF" Offset="0"/>
                            <GradientStop Color="Transparent" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
            </StackPanel>
            
            <!-- ========== RESULTS SECTION ========== -->
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Margin="0,10,0,0">
                <StackPanel>
                    <!-- Voice Animation (when speaking) -->
                    <Border x:Name="VoiceAnimationContainer" 
                            Height="40"
                            Margin="0,0,0,10"
                            Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                            <!-- Voice Waves -->
                            <Rectangle x:Name="VoiceWave1" 
                                       Width="4" Height="4"
                                       Fill="#007AFF" 
                                       Margin="2,0"
                                       RadiusX="2" RadiusY="2"/>
                            <Rectangle x:Name="VoiceWave2" 
                                       Width="4" Height="4"
                                       Fill="#0A84FF" 
                                       Margin="2,0"
                                       RadiusX="2" RadiusY="2"/>
                            <Rectangle x:Name="VoiceWave3" 
                                       Width="4" Height="4"
                                       Fill="#007AFF" 
                                       Margin="2,0"
                                       RadiusX="2" RadiusY="2"/>
                            
                            <TextBlock Text="Asystent mÃ³wi..." 
                                       Foreground="#80FFFFFF"
                                       Margin="10,0,0,0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- File Results -->
                    <Border x:Name="FileResultsPanel" 
                            CornerRadius="20" 
                            Background="#20000000" 
                            BorderThickness="1" 
                            BorderBrush="#30FFFFFF"
                            Padding="15"
                            Margin="0,0,0,10"
                            Visibility="Collapsed">
                        <!-- Content -->
                    </Border>
                    
                    <!-- Web Results -->
                    <Border x:Name="WebResultsPanel" 
                            CornerRadius="20" 
                            Background="#20000000" 
                            BorderThickness="1" 
                            BorderBrush="#30FFFFFF"
                            Padding="15"
                            Margin="0,0,0,10"
                            Visibility="Collapsed">
                        <!-- Content -->
                    </Border>
                    
                    <!-- AI Results -->
                    <Border x:Name="AIResultsPanel" 
                            CornerRadius="20" 
                            Background="#20000000" 
                            BorderThickness="1" 
                            BorderBrush="#30FFFFFF"
                            Padding="15"
                            Visibility="Collapsed">
                        <!-- Content -->
                    </Border>
                </StackPanel>
            </ScrollViewer>
            
            <!-- ========== STATUS BAR ========== -->
            <Border Grid.Row="2" 
                    CornerRadius="10" 
                    Background="#10000000" 
                    Padding="10"
                    Margin="0,15,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Status Text -->
                    <TextBlock x:Name="StatusText" 
                               Text="âœ¨ NaciÅ›nij Alt+Space lub mÃ³w..."
                               Foreground="#80FFFFFF"
                               FontSize="12"
                               VerticalAlignment="Center"/>
                    
                    <!-- Settings Button -->
                    <Button Grid.Column="1" 
                            Content="âš™ï¸" 
                            Style="{StaticResource AppleGlassButton}"
                            Width="30" Height="30"
                            Click="SettingsButton_Click"
                            ToolTip="Ustawienia"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
